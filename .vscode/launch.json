    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'raytracer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=raytracer"
                ],
                "filter": {
                    "name": "raytracer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'raytracer'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raytracer",
                    "--package=raytracer"
                ],
                "filter": {
                    "name": "raytracer",
                    "kind": "bin"
                }
            },
            "args": [
                "/home/tuydore/repositories/raytracer/debug/simple.yaml"
                // "/home/tuydore/Pictures/raytraces/demo.yaml"
            ],
            "cwd": "${workspaceFolder}"
        },
